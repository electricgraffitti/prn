<h1>Listing activities</h1>

<table>
  <tr>
    <th>Activity type</th>
    <th>Title</th>
    <th>Description</th>
    <th>Resort</th>
  </tr>

<% @activities.each do |activity| %>
  <tr>
    <td><%=h activity.activity_type %></td>
    <td><%=h activity.title %></td>
    <td><%=h activity.description %></td>
    <td><%=h activity.resort_id %></td>
    <td><%= link_to 'Show', activity %></td>
    <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
    <td><%= link_to 'Destroy', activity, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

