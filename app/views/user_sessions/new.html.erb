<div class="full_wrap"><h1>Login</h1>
    <% form_for(@user_session) do |f| %>
    <%= f.error_messages %>
  <p>
    <%= f.label :username, "Email Address" %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit 'Login', :class => 'btn' %>
  </p>
    <% end %>

<%= link_to 'Back', root_path, :class => 'btn' %></div>