<% form_for(@resort_location, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
  
<div class="grid_4">
  <h4 class="amenity_header">Resort Location</h4>
  <p>
    <%= f.label :resort_title, "Resort Location (Capitalize)" %><br />
    <%= f.text_field :resort_title %>
  </p>
  <p>
    <%= f.label :location_pic, "Upload New Image" %><br />
    <%= f.file_field :location_pic, :size => 16 %>
  </p>
</div>
<div class="grid_3">
  <h4 class="amenity_header">SEO Data</h4>
  <p>
    <%= f.label :permalink, "URL Link (some-location-name)" %><br />
    <%= f.text_field :permalink %>
  </p>
  <p>
    <%= f.label :keywords, "Keyword Phrases (comma separated, lower case)" %><br />
    <%= f.text_field :keywords %>
  </p>
  <p>
    <%= f.label :meta_description, "Search Engine Description" %><br />
    <%= f.text_area :meta_description, :rows => 5, :cols => 28 %>
  </p>
</div>
<div class="clear"></div>
  <p>
    <%= f.submit 'Submit', :class => "btn" %>
  </p>
<% end %>